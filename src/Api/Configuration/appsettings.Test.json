{

	"AllowedHosts": "*",
	"JwtSettings": {
		"Secret": "",
		"TokenExpirationInMinutes": 0,
		"Issuer": "",
		"Audience": ""
	},
	"EmailSettings": {
		"EnableEmailNotifications": false,
		"DefaultFromEmail": "",
		"SmtpSettings": {
			"Server": "",
			"Port": 0,
			"Username": "",
			"Password": ""
		}
	},
	"DatabaseSettings": {
		"ConnectionString": ""
	},
	"Serilog": {
		"Using": [ "Serilog.Sinks.File" ],
		"MinimumLevel": {
			"Default": "Warning",
			"Override": {
				"Microsoft": "Warning",
				"System": "Warning"
			}
		},
		"WriteTo": [
			{ "Name": "Console" },
			{ "Name": "Debug" },
			{
				"Name": "File",
				"Args": {
					"path": "/logs/logs-.txt",
					"rollingInterval": "Day",
					"rollOnFileSizeLimit": true,
					"formatter": "Serilog.Formatting.Json.JsonFormatter"
				}
			}
		],
		"Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ]
	}
}